  <body class="text-black antialiased">
    <nav
      class="top-0 absolute z-50 w-full flex flex-wrap items-center justify-between px-2 py-3 "
    >
      <div
        class="container px-4 mx-auto flex flex-wrap items-center justify-between"
      >
        <div
          class="w-full relative flex justify-between lg:w-auto lg:static lg:block lg:justify-start"
        >
          
          
        </div>
        
      </div>
    </nav>
    <main>

      <section class="absolute w-full h-full">
        <div
          class="absolute top-0 w-full h-full bg-gray-300"
        ></div>
        <div class="container mx-auto px-4 h-full">
          <div class="flex content-center items-center justify-center h-full">
            <div class="w-full lg:w-4/12 px-4">
              <div
                class="relative flex flex-col min-w-0 break-words w-full mb-6 shadow-lg rounded-lg bg-white border-0"
              >
                <div class="rounded-t mb-0 px-6 py-6">
                  
                  <div class="btn-wrapper text-center">
                   
                  </div>
                </div> <div class="btn-wrapper text-center">
                   
                  <a        href="/profile"
                class="bg-brightYellow text-black active:bg-darkYellow text-sm font-bold uppercase px-6 py-3 rounded shadow hover:shadow-lg outline-none focus:outline-none mr-1 mb-1"
                type="button"
                style="transition: all 0.15s ease 0s;"
              >
              Back
    </a>
                </div>

                <%- include ('./partials/messages') %>
                <div class="flex-auto px-4 lg:px-10 py-10 pt-0">
                  <div class="text-black text-center mb-3 font-bold">
                    <small>Please fil this form and proceed to make payment</small>
                  </div>
                  <form action="/pay" method="POST">
                    <div class="flex flex-row w-full mb-3">
                        <input
                           type="email" 
                           name="email"                   
                           placeholder="Email"
                           class="border-0 px-3 py-3 placeholder-black text-black bg-white rounded text-sm shadow focus:outline-brightYellow focus:ring w-full"
                           style="transition: all 0.15s ease 0s;"
                         />
                    

                      </div>
                      <div class="flex flex-row w-full mb-3">

                        <select id="amount" name="amount"  
                                            
                         class="border-0 px-3 py-3 placeholder-black text-black bg-white rounded text-sm shadow focus:outline-brightYellow focus:ring w-full"
                        > 
                          <option value="">Amount</option>
                          <option value="4000">₦ 4,000</option>
                          <option value="10000">₦ 10,000</option>
                          <option value="15000">₦ 15,000</option>
                          <option value="25000">₦ 25,000</option>
                          <option value="60000">₦ 60,000</option>
                          <option value="120000">₦ 120,000</option>
                          <option value="500000">₦ 500,000</option>
                          <!-- Add more options as needed -->
                        </select>
                       
                     </div>

                    
                      

                    <div>
                      
                    </div>
                    
                    <div class="text-center mt-6">
                      <button
                        class="bg-brightYellow text-black active:bg-brightYellow text-sm font-bold px-6 py-3 rounded shadow hover:shadow-lg outline-none focus:outline-none mr-1 mb-1 w-full"
                        type="submit"

                      >
                        Proceed to make Payment
                      </button>
                    </div>
                  </form>

                  
                  <div class="text-center mt-6">
                    
                  </div>
                </div>
              </div>

              
            </div>
          </div>
        </div>
        <footer class="absolute w-full bottom-0 bg-gray-300 pb-6">
          <div class="container mx-auto px-4">
            <hr class="mb-6 border-b-1 border-black" />
            <div
              class="flex flex-wrap items-center md:justify-between justify-center"
            >
              <div class="w-full md:w-4/12 px-4">
                <div class="text-sm text-black font-semibold py-1">
                    Copyright &copy;<script data-cfasync="false" ></script><script>document.write(new Date().getFullYear());</script> All rights reserved 
                 
                </div>
              </div>
             
            </div>
          </div>
        </footer>
      </section>
    </main>
  </body>

  <script>
    function toggleNavbar(collapseID) {
      document.getElementById(collapseID).classList.toggle("hidden");
      document.getElementById(collapseID).classList.toggle("block");
    }

   

    
  </script>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const urlParams = new URLSearchParams(window.location.search);
    const referralCode = urlParams.get('depo1');

    if (referralCode) {
      document.getElementById('depo1').value = referralCode;
    }
  });
</script>
 
</html>
